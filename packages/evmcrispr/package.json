{
  "name": "@evmcrispr/core",
  "version": "0.11.0",
  "codename": "new foundation",
  "license": "GPL-3.0",
  "description": "A library that encapsulates actions in EVM scripts for DAOs",
  "author": "Blossom Labs",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/chai": "^5.2.3",
    "@types/lodash.clonedeep": "^4.5.9",
    "chai": "^5.3.3",
    "dotenv": "^17.2.4",
    "is-ipfs": "^8.0.4",
    "msw": "^2.12.9",
    "nyc": "^17.1.0",
    "ora": "^9.3.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ensdomains/content-hash": "^3.0.0",
    "arcsecond": "^5.0.0",
    "jsymbol": "^0.3.5",
    "lodash.clonedeep": "^4.5.0"
  },
  "peerDependencies": {
    "viem": "^2.29.4"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "biome check src",
    "type-check": "tsc --noEmit",
    "test": "set -a && . .env && set +a && anvil --fork-url $ARCHIVE_NODE_ENDPOINT --fork-block-number 34630239 --chain-id 100 --silent & sleep 2 && bun test; EXIT=$?; kill %1 2>/dev/null; exit $EXIT",
    "test:coverage": "nyc --reporter=lcov bun run test",
    "build": "rm -rf dist && bun build ./src/index.ts --outdir ./dist --format esm --sourcemap=linked --packages external && tsc -p tsconfig.build.json",
    "dev": "bun build ./src/index.ts --outdir ./dist --format esm --sourcemap=linked --packages external --watch"
  },
  "private": true
}
