{
  "name": "@evmcrispr/module-std",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "description": "Standard module for EVMcrispr",
  "author": "Blossom Labs",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@evmcrispr/sdk": "workspace:*"
  },
  "devDependencies": {
    "@evmcrispr/test-utils": "workspace:*"
  },
  "peerDependencies": {
    "viem": "^2.29.4"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "biome check src",
    "type-check": "tsc --noEmit",
    "build": "bun run ../../packages/sdk/scripts/build.ts",
    "test:unit": "bun test ./test/unit",
    "test:integration": "bun test ./test/integration",
    "test:coverage": "bun test --coverage --coverage-reporter=text --coverage-reporter=lcov --coverage-skip-test-files ./test/unit"
  }
}
