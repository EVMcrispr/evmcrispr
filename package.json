{
  "private": true,
  "overrides": {
    "viem": "^2.45.1"
  },
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "changeset:release": "turbo run build && changeset publish",
    "changeset:version": "changeset version && bun install --lockfile-only",
    "type-check": "turbo run type-check",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun run test:unit && bun run test:integration",
    "test:unit": "turbo run test:unit",
    "test:integration": "bun scripts/run-integration-tests.ts",
    "test:coverage": "turbo run test:coverage && bun scripts/merge-coverage.ts",
    "dev:terminal": "bun --filter evmcrispr-terminal dev",
    "dev:website": "bun --filter evmcrispr-website dev",
    "dev": "bun --filter=* dev"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.15.21",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.8.4",
    "typescript": "^5.9.3"
  },
  "name": "evmcrispr-monorepo",
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/*",
    "packages/*",
    "modules/*"
  ]
}
