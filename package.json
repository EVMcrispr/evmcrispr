  },
  "files": [
    "dist"
  ],
  "scripts": {
    "account": "hardhat account",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "build": "yarn build:cjs && yarn build:esm",
    "build:esm": "tsc --build ./tsconfig.esm.json",
    "build:cjs": "tsc --build",
    "chain": "hardhat node",
    "compile": "hardhat compile --no-typechain",
    "docs": "typedoc",
    "fork": "hardhat node --fork https://mainnet.infura.io/v3/460f40a260564ac4a4f4b3fffb032dad",
    "fork:rinkeby": "hardhat node --fork https://eth-rinkeby.alchemyapi.io/v2/zWeBt8YowIcK93EPCcp3862fvKTUsLDO",
    "generate": "hardhat generate",
    "lint": "eslint --ext .ts ./src",
    "prepare": "yarn build && husky install",
    "send": "hardhat send",
    "test": "hardhat test --network rinkeby",
    "test:coverage": "nyc --reporter=lcov yarn test",
    "create-fixtures": "hardhat run scripts/create-fixtures.ts"
  }
