{
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "bun run --cwd packages/evmcrispr build && bun run --filter './apps/*' build",
    "changeset:release": "bun run build && changeset publish",
    "changeset:version": "changeset version && bun install --lockfile-only",
    "dev": "bun run --cwd packages/evmcrispr build && (bun run --cwd packages/evmcrispr dev & bun run --filter './apps/*' dev)",
    "type-check": "bun run --filter '*' type-check",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun run --filter '*' test",
    "test:coverage": "bun run --filter '*' test:coverage",
    "dev:terminal": "bun run --cwd apps/evmcrispr-terminal dev",
    "dev:website": "bun run --cwd apps/evmcrispr-website dev"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "name": "evmcrispr-monorepo",
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
